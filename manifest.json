{
  "name": "arXiv naming tools",
  "description": "Helps you name your files when downloading from arXiv.",
  "version": "1.2",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/arxiv.js"],
      "matches": [
        "https://arxiv.org/abs/*"
      ]
    }
  ]
}
